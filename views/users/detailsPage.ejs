                    <section class="mt-5 pt-5">
                    <div class="container">
                        <div class="row">


                            <!-- <h1> <%=orderData.totalPrice%></h1> -->
                            <% if(orderData.product.length>0){ %>

                            <% if (orderData.orderStatus== "Delivered") {%>
                                <a href="/returnOrder?id=<%=orderData._id%>"><button class="btn btn-outline-danger"> Return Order</button></a> 
                                <%} else if(orderData.orderStatus== "Cancelled"){%>
                            <h6 class="text-danger">Order Cancelled</h6> 
                            <%} else if(orderData.orderStatus== "Return Approved"){%>
    
                                <h6 class="text-danger">Refund Approved</h6> 
                                    <%}else{%><a href="/cancelOrder?id=<%=orderData._id%>"><button class="btn btn-outline-danger"> Cancel Order</button></a><%}%>
                        <table class="table mt-5">
                            <thead>
                              <tr>
                                <th scope="col">product name</th>
                                <th scope="col">description </th>
                                <th scope="col">product image </th>
                                <th scope="col">product price </th>
                                <th scope="col">product quantity </th>
                              </tr>
                            </thead>
                          <% for(let i=0;i<orderData.product.length; i++) { %>
                            <tbody>
                               
                              <tr>
                
                                <td><%= orderData.product[i].name%></td>
                                <td><%= orderData.product[i].productId.description %></td>
                             <td><img style="width: 100px; height: 80px;" src= "trendimages/<%=orderData.product[i].productId.image[0] %>"></td>
                             <td><%= orderData.product[i].price %></td>
                              
                             <td><%= orderData.product[i].quantity %></td>
                             <%}
                            }else{%><h3>no products to display</h3>
                                <%}%>
                              </tr>
                           
                            </tbody>
                        
                            
                          </table>
                      

                        </div>
                    </div>
