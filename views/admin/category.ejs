			<div class="head-title">
				<div class="left">
					<h1>CATEGORY LIST</h1>
					<ul class="breadcrumb">
					
					</ul>
				</div>
				<a href="/admin/addCategory" class="btn-download">
					<i class='bx bxs-cloud-download' ></i>
					<span class="text">Add Category</span>
				</a>
			</div>

		
			<div class="table-data">
				<div class="order">
					<div class="head">
					
						<i class='bx bx-search' ></i>
						<i class='bx bx-filter' ></i>
					</div>
					<table id="categoryTable">
						<thead>
							<tr>
								<th>Name</th>
								<th>action</th>
								<th>action</th>
							</tr>
						</thead>
						<tbody>
							<% 
							if(categoryData.length>0){
								for(let i=0;i<categoryData.length;i++)
								{
									%>
		
									<tr>
										<td><%=categoryData[i].name%></td>
					
										
  <td>  <button type="button" class="btn btn-danger btn-sm"
        onclick="confirmDelete('<%=categoryData[i]._id%>')">Delete</button>
</td>

<script>
    function confirmDelete(categoryId) {
        if (confirm("Are you sure you want to delete this category?")) {
            window.location.href = "/admin/deleteCategory?id=" + categoryId;
        }
    }
</script>

										
										
										<td><a href="/admin/updateCategory?id=<%=categoryData[i]._id%>"><button type="button" class="btn btn-danger btn-sm">Update</button></a></td>			
				</tr>
									<%
								}
							}else{
								%>
								<tr>
									<td colspan="5">category not found</td>
								</tr>
								<%
							}
							%>
						</tbody>
					
					</table>
					<div>
						<%
						if(typeof message!=='undefined')
						{
							%>
							<p style="color: red;"><%= message %></p>
							<%
						}
						%>
						</div>
				</div>
