<%- include("../layouts/header.ejs") %>
<section>
  <div class="container mt-4">
     <div class="row">
       
      <div class="col-md-6">
          <h2 class="text-center">Add Coupon</h2>
          <form action="/admin/addCoupons" method="post" >
              <label for="" class="mt-3">Coupon code</label>
              <input type="text"name="CouponCode"class="form-control" placeholder="Coupon code" pattern="\S+" required>
  
              <label for="" class="mt-4">Discount type</label>
              <!-- <input type="text"name="discountType"class="form-control" placeholder="Discount type"> -->
              <select name="discountType" id="" class="form-control">
                <option value="">please select discount type</option>
                <option value="flat">flat</option>
                <option value="percentage">percentage</option>
              </select>
  
              <label for="" class="mt-4">Discount</label>
              <input type="number"name="discountAmount"class="form-control" placeholder="Discount">
              
              <label for="" class="mt-4">Max Discount</label>
              <input type="text"name="maxDiscountAmount"class="form-control" placeholder="Max Discount">

              <label for="" class="mt-4">Min Purchase</label>
              <input type="text"name="minPurchase"class="form-control" placeholder="Min Purchase">
              
              <label for="" class="mt-4">Expiry Date</label>
              <input type="date"name="expiryDate"class="form-control" placeholder="Expiry Date">
               
              <input type="submit" value="Submit" class="btn btn-success mt-4">
          </form>
      </div>
     </div>   
  </div>
  </section>
    <%- include("../layouts/footer.ejs") %>