	<script>
		$(document).ready(function () {
      $('#userTable').DataTable();
        });
	</script>

	<title>AdminHub</title>
</head>
<body>


	<!-- SIDEBAR -->
	<section id="sidebar">
		<a href="#" class="brand">
			<i class='bx bxs-smile'></i>
			<span class="text">AdminHub</span>
		</a>
		<ul class="side-menu top">
			<li >
				<a href="adminHome">
					<i class='bx bxs-dashboard' ></i>
					<span class="text">Dashboard</span>
				</a>
			</li>
			<li class="active">
				<a href="#">
					<i class='bx bxs-shopping-bag-alt' ></i>
					<span class="text">User Management</span>
				</a>
			</li>
			<li>
				<a href="product">
					<i class='bx bxs-doughnut-chart' ></i>
					<span class="text">Product</span>
				</a>
			</li>
			<li>
                <a href="banner">
            
            <i class='bx bxs-doughnut-chart' ></i>
            <span class="text"> Banner</span>
        </a>
    </li>
			<li>
				<a href="category">
					<span class="text" style="margin-left: 40px;">Categories</span>
				</a>
			</li>
			<li>
				<a href="getOrder">
					<i class='bx bxs-group' ></i>
					<span class="text">Order Management</span>
				</a>
			</li>
		</ul>
		<ul class="side-menu">
			<li>
				<a href="getCoupon">
					<i class='bx bxs-cog' ></i>
					<span class="text">Coupon Management</span>
				</a>
			</li>
			<li>
				<a href="/admin/logout" class="logout">
					<i class='bx bxs-log-out-circle' ></i>
					<span class="text">Logout</span>
				</a>
			</li>
		</ul>
	</section>
	<!-- SIDEBAR -->



	<!-- CONTENT -->
	<section id="content">
		<!-- NAVBAR -->
		<nav>
		
		
		</nav>
		<!-- NAVBAR -->

		<!-- MAIN -->
		<main>
			<div class="head-title">
				<div class="left">
					<h1>USERS LIST</h1>
					<ul class="breadcrumb">
						<!-- <li>
							<a href="#">Dashboard</a>
						</li>
						<li><i class='bx bx-chevron-right' ></i></li>
						<li>
							<a class="active" href="#"></a>
						</li> -->
					</ul>
				</div>
				<a href="#" class="btn-download">
					<i class='bx bxs-cloud-download' ></i>
					<span class="text">Download PDF</span>
				</a>
			</div>

		
			<div class="table-data">
				<div class="order">
					<div class="head">
					
						<i class='bx bx-search' ></i>
						<i class='bx bx-filter' ></i>
					</div>
					<table id="userTable">
						<thead>
							<tr>
								<th>Name</th>
								<th>E-mail</th>
								<th>Mobile Number</th>
                                <th>Action</th>
							</tr>
						</thead>
						<% 
						if(users.length>0){
							for(let i=0;i<users.length;i++)
							{
								%>
	
								<tr>
									<td><%=users[i].name%></td>
									<td><%=users[i].email%></td>
									<td><%=users[i].mobile%></td>
									<td><p><% if(users[i].isBlock==0){%>
										<a href="/admin/block-user?id=<%=users[i]._id %>"><span class="status" style="background-color: green;">Active</span></a>
									<%}
									else if(users[i].isBlock==1)
									{%>
										<a href="/admin/block-user?id=<%=users[i]._id %>"><span class="status" style="background-color: red;">Blocked</span></a>
									<%}%></p></td>
									
			</tr>
								<%
							}
						}else{
							%>
							<tr>
								<td colspan="5">users not found</td>
							</tr>
							<%
						}
						%>
						
					</table>
				</div>
		
	

	<script src="script.js"></script>
</body>
</html








