			<div class="table-data">
				<div class="order">
					<div class="head">
					
						<i class='bx bx-search' ></i>
						<i class='bx bx-filter' ></i>
					</div>
					<table id="productTable">
						<thead>
							<tr>
								<th>Name</th>
								<th>Description</th>
								<th>Price</th>
								<th>stock</th>
                                <th>category</th>
								<th>image</th>
							
