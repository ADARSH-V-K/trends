	<!-- SIDEBAR -->



	<!-- CONTENT -->
	<section id="content">
		<!-- NAVBAR -->
		<nav>
			<i class='bx bx-menu' ></i>
			<a href="#" class="nav-link">search users</a>
			<form action="#">
				<div class="form-input">
					<input type="search" placeholder="Search...">
					<button type="submit" class="search-btn"><i class='bx bx-search' ></i></button>
				</div>
			</form>
			<input type="checkbox" id="switch-mode" hidden>
			<label for="switch-mode" class="switch-mode"></label>
			<a href="#" class="notification">
				<i class='bx bxs-bell' ></i>
				<span class="num">8</span>
			</a>
			<a href="#" class="profile">
				<img src="https://i.pinimg.com/originals/ca/8d/af/ca8dafdcead0540ec669c5c6b4f0d102.jpg">
			</a>
		</nav>
		<!-- NAVBAR -->

		<!-- MAIN -->
		<main>
			<div class="head-title">
				<div class="left">
					<h1>ORDER UPDATION</h1>
					<ul class="breadcrumb">
				
					</ul>
				</div>
				<a href="#" class="btn-download">
					<i class='bx bxs-cloud-download' ></i>
					<span class="text">Download PDF</span>
				</a>
			</div>
            <table class="table">
                <thead>
                  <tr>
                    <th scope="col"> </th>
                    <th scope="col" >Details</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <th scope="row">order id</th>
                    <td><%=orderData._id%></td>
                    
                  </tr>
                  <tr>
                    <th scope="row">customer name</th>
                    <td><%=orderData.customer.name%></td>
                  
                  </tr>
                  <%for( let i=0;i<productData.length;i++)
                  {%>
                  <tr>
                  
                    <th scope="row">Product Name</th>
                    <td colspan="2"><%=productData[i].productId.name%></td>
					<td colspan="2">description:<%=productData[i].productId.description%></td>
					<td colspan="2">qty:<%=productData[i].quantity%></td>
					<td colspan="2">price:<%=productData[i].price%></td>
					<td colspan="2">total price:<%=orderData.totalPrice%></td>
                  </tr>
                  <%}%>
				  <tr>
				  <th scope="row">Payment Method</th>
                    <td colspan="2"><%=orderData.paymentMethod%></td>
				</tr>



				  <form action="/admin/viewDetails" method="post">
				  <tr>
				  <th scope="row">select payment status</th>
				 
			<td colspan="2">	<select class="form-select" aria-label="Default select example" name="paymentStatus">
  <option selected>select</option>
  <option value="Pending">Pending</option>
  <option value="Received">Received</option>
  <option value="Failed">Failed</option>
  <option value="Refund">Refund</option>
</select></td></tr>
             
<tr>
			  <th scope="row">select order status</th>
			  <td colspan="2">
			  <select class="form-select" aria-label="Default select example" name="orderStatus">
  <option selected>Select</option>
  <option value="Placed">Placed</option>
  <option value="Dispatched">Dispatched</option>
  <option value="Shipped">Shipped</option>
  <option value="Delivered">Delivered</option>
  <option value="Cancelled">Cancelled</option>
  <option value="Return Approved">Return Approved</option>
</select></td>
</tr>
</tbody>
              </table>	
				</div>
	
				<input type="hidden" name="id" value="<%=orderData._id%>">
	<button type="submit" class="btn-primary" style="border-radius:.5rem; margin-left: 220px;">submit</button>
	
</form>
