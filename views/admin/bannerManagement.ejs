<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<!-- Boxicons -->
	<link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
	<!-- My CSS -->
	<link rel="stylesheet" href="/admin/style.css">
	<link rel="stylesheet" href="https://cdn.datatables.net/1.13.3/css/jquery.dataTables.min.css" >
	<!-- Adding jquery cdn -->
	<script src="https://code.jquery.com/jquery-3.5.1.js">
		
	</script>
	<!-- Adding datatable cdn -->
	<script src="https://cdn.datatables.net/1.13.3/js/jquery.dataTables.min.js"></script>

	

	
	<script>
		$(document).ready(function () {
      $('#productTable').DataTable();
        });
	</script>

	<title>AdminHub</title>
</head>
<body>


	<!-- SIDEBAR -->
	<section id="sidebar">
		<a href="#" class="brand">
			<i class='bx bxs-smile'></i>
			<span class="text">AdminHub</span>
		</a>
		<ul class="side-menu top">
			<li >
				<a href="adminHome">
					<i class='bx bxs-dashboard' ></i>
					<span class="text">Dashboard</span>
				</a>
			</li>
			<li class="'bx bxs-shopping-bag-alt'">
				<a href="User">
					<i class='bx bxs-shopping-bag-alt' ></i>
					<span class="text">User Management</span>
				</a>
			</li>
			<li >
						<a href="Product">
					
					<i class='bx bxs-doughnut-chart' ></i>
					<span class="text"> Product</span>
				</a>
			</li>
            <li class="active">
                <a href="#">
            
            <i class='bx bxs-doughnut-chart' ></i>
            <span class="text"> Banner</span>
        </a>
    </li>
			<li>
				<a href="category">
					
					<span class="text" style="margin-left: 40px;">Categories</span>
				</a>
			</li>
			<li>
				<a href="getOrder">
					<i class='bx bxs-group' ></i>
					<span class="text">Order Management</span>
				</a>
			</li>
		</ul>
		<ul class="side-menu">
			<li>
				<a href="getCoupon">
					<i class='bx bxs-cog' ></i>
					<span class="text">Coupon Management</span>
				</a>
			</li>
			<li>
				<a href="/admin/logout" class="logout">
					<i class='bx bxs-log-out-circle' ></i>
					<span class="text">Logout</span>
				</a>
			</li>
		</ul>
	</section>
	<!-- SIDEBAR -->



	<!-- CONTENT -->
	<section id="content">
		

		<!-- MAIN -->
		<main>
			<div class="head-title">
				<div class="left">
					<h1>BANNER LIST</h1>
					<ul class="breadcrumb">
					
					</ul>
				</div>
				<a href="addBanner" class="btn-download">
					<i class='bx bxs-cloud-download' ></i>
					<span class="text">Add IMAGE</span>
				</a>
			</div>

		
			<div class="table-data">
				<div class="order">
					<div class="head">
					
						<i class='bx bx-search' ></i>
						<i class='bx bx-filter' ></i>
					</div>
					<table id="productTable">
						<thead>
							<tr>
								<th>Name</th>
								<th>Description</th>
                                <th>category</th>
								<th>image</th>
							    <th>Delete</th>
								
								
							</tr>
						</thead>
						<tbody>
							<% 
							if(bannerData.length>0){
								for(let i=0;i<bannerData.length;i++)
								{
									%>
		
									<tr>
										<td><%=bannerData[i].name%></td>
										<td><%=bannerData[i].description%></td>
										<td><%=bannerData[i].category.name%></td>
							
										
							
										<!-- ----------------- -->
										<td><a href="" class="text-dark">
											<i class="fas fa-envelope fa-2x"></i>
											<img  src=" trendimages/<%=bannerData[i].image[0] %>"  alt="df" >
											
										</a></td>
									

										
  <td><button type="button" class="btn btn-danger btn-sm"
        onclick="confirmDelete('<%=bannerData[i]._id%>')">Delete</button>
</td>

<script>
    function confirmDelete(bannerId) {
        if (confirm("Are you sure you want to delete this product?")) {
            window.location.href = "/admin/deleteBanner?id=" + bannerId;
        }
    }
</script>						
				</tr>
									<%
								}
							}else{
								%>
								<tr>
									<td colspan="5">Banners not found</td>
								</tr>
								<%
							}
							%>
						</tbody>
					
					</table>
				
					<div>
						<div>
						<%
						if(typeof message!=='undefined')
						{
							%>
							<p style="color: red;"><%= message %></p>
							<%
						}
						%>
						</div>
					
					
					
				</div>
				
	<script src="script.js"></script>
</body>
</html>
